{
  "name": "testpup",
  "version": "1.0.0",
  "description": "node:test + Puppeteer. Minimal e2e and unit testing.",
  "license": "ISC",
  "author": "brine",
  "type": "module",
  "main": "testpup.js",
  "scripts": {
    "test": "node --test --test-reporter spec 'test/**/*.test.js'",
    "test:unit": "node --test --test-reporter spec 'test/unit/**/*.test.js'",
    "test:e2e": "node --test --test-concurrency=4 --test-reporter spec 'test/e2e/**/*.test.js'",
    "test:debug": "HEADLESS=0 SLOWMO=100 node --test --test-reporter spec 'test/e2e/**/*.test.js'",
    "pretty": "npx standard --fix",
    "kill": "pkill -f chromium"
  },
  "dependencies": {
    "puppeteer": "^24.37.5"
  },
  "engines": {
    "node": ">=18"
  }
}
